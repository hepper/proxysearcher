<UserControl x:Class="ProxySearch.Console.Controls.ActionInvokerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ProxySearch.Console.Code.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="763" Name="ActionInvoker">
    <UserControl.Resources>
        <converters:ValueToColorConverter x:Key="valueToColorConverter" />
    </UserControl.Resources>
    <Grid Margin="{StaticResource DefaultMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200px" />
            <ColumnDefinition Width="100px" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Name="StatusText">Ready</Label>
        <ProgressBar Grid.Column="1" Name="ProgressBar" IsTabStop="False" IsEnabled="false"
                     Foreground="{Binding ElementName=ActionInvoker, Path=ActiveThreads, Converter={StaticResource valueToColorConverter}}" />
        <Label Grid.Column="1" Name="ProgressText" HorizontalContentAlignment="Center" />
        <Button Grid.Column="2" IsEnabled="False" Name="Details" Margin="5,0,0,0" Click="Details_Click">Details</Button>
    </Grid>
</UserControl>
