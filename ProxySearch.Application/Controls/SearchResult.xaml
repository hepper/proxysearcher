<UserControl x:Class="ProxySearch.Console.Controls.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ProxySearch.Console.Controls"
             xmlns:converters="clr-namespace:ProxySearch.Console.Code.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Name="Result">
    <UserControl.Resources>
        <converters:SizeToAngleConverter x:Key="sizeToAngleConverter" />
        <converters:CenterConverter x:Key="centerConverter" />
        <converters:RowBackgroundColorConverter x:Key="rowBackgroundColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource WatermarkText}" />
            </TextBlock.Style>
            <TextBlock.RenderTransform>
                <RotateTransform CenterX="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBlock}}, Path=ActualWidth, 
                                 Converter={StaticResource centerConverter}}"
                                 CenterY="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBlock}}, Path=ActualHeight, 
                                 Converter={StaticResource centerConverter}}">
                    <RotateTransform.Angle>
                        <MultiBinding Converter="{StaticResource sizeToAngleConverter}">
                            <Binding ElementName="Result" Path="ActualWidth" />
                            <Binding ElementName="Result" Path="ActualHeight" />
                        </MultiBinding>
                    </RotateTransform.Angle>
                </RotateTransform>
            </TextBlock.RenderTransform>
            Proxy Searcher
        </TextBlock>

        <controls:DataGridHelpControl Grid.Row="0" Text="Please wait a little for results">
            <controls:DataGridHelpControl.Style>
                <Style TargetType="{x:Type controls:DataGridHelpControl}">
                    <Setter Property="Visibility" Value="Hidden" />

                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=Result, Path=PageData.Count}" Value="0" />
                                <Condition Binding="{Binding ElementName=Result, Path=SearchState}" Value="InProgress" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:DataGridHelpControl.Style>
        </controls:DataGridHelpControl>
        <controls:DataGridHelpControl Grid.Row="0" Text="Ups... We didn't find anything. Could you please check your search settings? If everything is ok there then create support ticket. We will try to resolve issue as soos as possible.">
            <controls:DataGridHelpControl.Style>
                <Style TargetType="{x:Type controls:DataGridHelpControl}">
                    <Setter Property="Visibility" Value="Hidden" />

                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=Result, Path=PageData.Count}" Value="0" />
                                <Condition Binding="{Binding ElementName=Result, Path=SearchState}" Value="Completed" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:DataGridHelpControl.Style>
        </controls:DataGridHelpControl>

        <DataGrid Grid.Row="0" ItemsSource="{Binding ElementName=Result, Path=PageData}" Name="DataGridControl"  Background="Transparent"
                  VirtualizingStackPanel.IsVirtualizing="False" VirtualizingPanel.IsContainerVirtualizable="False" EnableColumnVirtualization="False" EnableRowVirtualization="False" 
                  Sorting="DataGridControl_Sorting" >
            <DataGrid.Style>
                <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=Result,  Path=PageData.Count}"  Value="0">
                            <Setter Property="Visibility" Value="Hidden" />
                        </DataTrigger>                        
                    </Style.Triggers>
                 </Style>                
            </DataGrid.Style>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Converter={StaticResource rowBackgroundColorConverter}}" Value="Used" >
                            <Setter Property="Background" Value="#0F050505" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource rowBackgroundColorConverter}}" Value="Selected" >
                            <Setter Property="Background" Value="#A8B5FF" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Converter={StaticResource rowBackgroundColorConverter}}" Value="Unused" >
                            <Setter Property="Background" Value="Transparent" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="IP Address" Width="16*" SortMemberPath="AddressString" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Name="textBox" Text="{Binding Path=Address, Mode=OneWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Port" Width="15*" SortMemberPath="Port" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Name="textBox" Text="{Binding Path=Port, Mode=OneWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Country" Width="15*" SortMemberPath="CountryInfo.Name" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Name="textBox" Text="{Binding Path=CountryInfo.Name, Mode=OneWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Type" Width="15*" SortMemberPath="Details.Details.Type" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:HttpProxyDetailsControl Proxy="{Binding}" />                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Speed (response)" SortMemberPath="BandwidthData" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:BandwidthControl ProxyInfo="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Usage" Width="15*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:ProxyClientsControl ProxyInfo="{Binding}" Name="ProxyClient" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <controls:PagingControl x:Name="Paging" PageChanged="PageChanged" Grid.Row="1" Count="{Binding ElementName=Result, Path=Data.Count}" Margin="0,5,0,5" />
    </Grid>
</UserControl>
