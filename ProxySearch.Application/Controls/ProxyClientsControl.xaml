<UserControl x:Class="ProxySearch.Console.Controls.ProxyClientsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:ProxySearch.Console.Controls"
             mc:Ignorable="d" Name="ProxyClients" >
    <Grid>
        <Expander>
            <StackPanel>
                <ItemsControl ItemsSource="{Binding ElementName=ProxyClients, Path=Clients}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:ProxyClientControl ProxyClient="{Binding}" ProxyInfo="{Binding ElementName=ProxyClients, Path=ProxyInfo}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
